<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/huawei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text='Wyświetlacz Kolorowy / IPS TFT 16M kolorów 720 x 1280 px (5,00") 294 ppi'
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pamięć RAM 1 GB"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="System operacyjny Android 5.1 Lollipop"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="Procesor MediaTek MT6735P Zegar procesora: 1,30 GHz Liczba rdzeni: 4"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:onClick="Return"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</LinearLayout>
